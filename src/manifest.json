{
  "manifest_version": 2,
  "name": "Red-It",
  "version": "0.3.1",
  "author": "Augusto Frade",
  "homepage_url": "https://github.com/augustofrade/red-it-extension",
  "developer": {
    "name": "Augusto Frade",
    "url": "https://github.com/augustofrade"
  },

  "icons": {
    "32": "icons/icon.png",
    "64": "icons/icon@2x.png"
  },

  "description": "Block posts on Reddit based on its content",

  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content-scripts/reddit.js"],
      "css": ["content-scripts/injected-styles.css"]
    }
  ],

  "permissions": ["tabs", "storage", "webRequest", "webRequestBlocking", "*://*.reddit.com/*"],

  "browser_action": {
    "default_title": "Red-It",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js", "background-scripts/subreddit-blocker.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "@red-it"
    }
  },

  "web_accessible_resources": ["pages/blocked-subreddit/index.html"]
}
