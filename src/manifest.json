{
  "manifest_version": 2,
  "name": "Red-It",
  "version": "0.2",

  "icons": {
    "32": "icons/icon.png",
    "64": "icons/icon@2x.png"
  },

  "description": "Block content on Reddit based on its content",

  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content-scripts/reddit.js"],
      "css": ["content-scripts/injected-styles.css"]
    }
  ],

  "permissions": ["tabs", "storage"],

  "browser_action": {
    "default_title": "Red-It",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "@red-it"
    }
  }
}
